<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tambah_aktifitas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nindyasaridu.lokataniapps.TambahAktifitasActivity"
    android:paddingTop="40dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/card"
        android:id="@+id/back_hasil"
        android:layout_below="@+id/back_pengeluaran"
        android:layout_margin="10dp"
        android:padding="15dp"
        >

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/aktifitas"
            android:layout_below="@+id/spinner1"
            android:layout_alignLeft="@+id/spinner1"
            android:layout_alignStart="@+id/spinner1"
            android:layout_alignParentRight="true" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/jumlah_uang"
            android:layout_below="@+id/aktifitas"
            android:layout_alignLeft="@+id/spinner1"
            android:layout_alignStart="@+id/spinner1"
            android:layout_alignParentRight="true"

            />

        <TextView
            android:text="Transaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/judul_transaksi"
            android:textSize="16sp"
            android:layout_alignBottom="@+id/spinner1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:layout_marginBottom="14dp" />

        <TextView
            android:text="Aktivitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/judul_transaksi"
            android:textSize="16sp"
            android:layout_alignBottom="@+id/aktifitas"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:layout_marginBottom="14dp" />

        <TextView
            android:text="Nominal (Rp.)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/judul_nominal"
            android:textSize="16sp"
            android:layout_alignBottom="@+id/jumlah_uang"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:layout_marginBottom="14dp"
            />

    </RelativeLayout>

    <Button
        android:text="TAMBAH AKTIVITAS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_hasil"
        android:layout_alignLeft="@+id/back_hasil"
        android:layout_alignStart="@+id/back_hasil"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/white"
        android:id="@+id/tambah_aktivitas"
        android:layout_alignRight="@+id/back_hasil"
        android:layout_alignEnd="@+id/back_hasil"
        android:layout_marginTop="20dp"/>


</RelativeLayout>
